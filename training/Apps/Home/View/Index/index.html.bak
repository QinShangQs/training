	</div>


<script type="text/javascript">
	$(document).ready(function() {
		$("#pro").click(function() {
			$("#pro").addClass('active');
			$("#ui").removeClass('active');

			$("#pro_div").show();
			$("#ui_div").hide();
		});

		$("#ui").click(function() {
			$("#ui").addClass('active');
			$("#pro").removeClass('active');

			$("#ui_div").show();
			$("#pro_div").hide();
		});
		
		function checkLessonSubmit(tag, fuc){
			var name = $.trim($("#"+tag+"_name").val());
			var lesson_id = $.trim($("#"+tag+"_lesson_id").val());
			var mobile = $.trim($("#"+tag+"_mobile").val());
			var tencent = $.trim($("#"+tag+"_tencent").val());

			var err = '';
			if (Utils.isEmpty(name)) {
				err += '请填写姓名！' + "\n";
			}
			if (lesson_id == 0) {
				err += '请选择课程！' + "\n";
			}
			if (Utils.isEmpty(mobile)) {
				err += '请填写联系方式！' + "\n";
			} else if (!Utils.isTel(mobile)) {
				err += '请正确填写联系方式！' + "\n";
			}
			if (Utils.isEmpty(tencent)) {
				err += '请填写QQ或微信！' + "\n";
			}

			if (err) {
				alert(err);
				return;
			}

			$.getJSON('__URL__/lessonRegister', {
				name : name,
				lesson_id : lesson_id,
				mobile : mobile,
				tencent : tencent,
				r : Math.random()
			}, function(obj) {
				if (obj.success) {
					$("#"+tag+"_name").val('');
					$("#"+tag+"_lesson_id").val(0);
					$("#"+tag+"_mobile").val('');
					$("#"+tag+"_tencent").val('');
					
					if(fuc)
						fuc();
				}
				alert(obj.message);
			});
		}
		
		$("#rx_submit").click(function() {
			checkLessonSubmit("rx", function(){
				EV_closeAlert('lesson_show');
			});
		});

		$("#r_submit").click(function() {
			checkLessonSubmit("r", null);
		});

	});

	$(document).ready(function() {
		$('.iosSlider').iosSlider({
			snapToChildren : true,
			desktopClickDrag : true,
			keyboardControls : true,
			navNextSelector : $('.next'),
			navPrevSelector : $('.prev'),
			navSlideSelector : $('.selectors .item'),
			onSlideChange : slideChange
		});

		$(".kaike-box tbody tr:even").css("background", "#F6F6F6");

	});

	function slideChange(args) {
		$('.selectors .item').removeClass('selected');
		$('.selectors .item:eq(' + (args.currentSlideNumber - 1) + ')')
				.addClass('selected');
	}
</script> </block>